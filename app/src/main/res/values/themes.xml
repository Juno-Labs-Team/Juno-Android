<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Juno" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/juno_primary</item>
        <item name="colorOnPrimary">@color/juno_on_primary</item>
        <item name="colorPrimaryContainer">@color/juno_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/juno_on_primary_container</item>
        <item name="colorSecondary">@color/juno_secondary</item>
        <item name="colorOnSecondary">@color/juno_on_secondary</item>
        <item name="colorSecondaryContainer">@color/juno_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/juno_on_secondary_container</item>
        <item name="colorTertiary">@color/juno_tertiary</item>
        <item name="colorOnTertiary">@color/juno_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/juno_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/juno_on_tertiary_container</item>
        <item name="colorError">@color/juno_error</item>
        <item name="colorOnError">@color/juno_on_error</item>
        <item name="colorErrorContainer">@color/juno_error_container</item>
        <item name="colorOnErrorContainer">@color/juno_on_error_container</item>
        <item name="colorOutline">@color/juno_outline</item>
        <item name="colorOutlineVariant">@color/juno_outline_variant</item>
        <item name="colorSurface">@color/juno_surface</item>
        <item name="colorOnSurface">@color/juno_on_surface</item>
        <item name="colorSurfaceVariant">@color/juno_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/juno_on_surface_variant</item>
        <item name="colorSurfaceInverse">@color/juno_inverse_surface</item>
        <item name="colorOnSurfaceInverse">@color/juno_inverse_on_surface</item>
        <item name="colorPrimaryInverse">@color/juno_inverse_primary</item>
        
        <!-- Enable smooth animations -->
        <item name="android:windowAnimationStyle">@style/JunoWindowAnimations</item>
        <item name="android:listViewStyle">@style/JunoListView</item>
    </style>

    <style name="Theme.Juno" parent="Base.Theme.Juno" />
    
    <!-- Smooth animations -->
    <style name="JunoWindowAnimations" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    
    <style name="JunoListView" parent="@android:style/Widget.ListView">
        <item name="android:scrollingCache">true</item>
        <item name="android:smoothScrollbar">true</item>
    </style>
</resources>